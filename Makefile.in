CC = @CC@
LD = @LD@
CFLAGS = @CFLAGS@
SRC_DIR = @SRC_DIR@

CFILES = $(shell find $(SRC_DIR) -name "*.c")
OBJECTS = $(CFILES:.c=.o)
HEADER_DEPS = $(CFILES:.c=.d)

bin/vinit: $(OBJECTS)
	@ mkdir -p $(shell dirname $@)
	$(LD) $(OBJECTS) -T link-x86_64.ld -o $@

-include $(HEADER_DEPS)
%.o: %.c
	$(CC) -c -MMD $(CFLAGS) -Iinclude/ $< -o $@

.PHONY: clean
clean:
	rm bin/*
	rm $(HEADER_DEPS) $(OBJECTS)
